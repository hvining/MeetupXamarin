<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeetupApp.Views.EventsPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:converters="clr-namespace:MeetupApp.Converters;assembly=MeetupApp"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">

    <ContentPage.Content>
        <Grid BackgroundColor="#0CAFAF">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Header-->
            <Grid>
                <Label Text="MeetUp App"
                       TextColor="White"
                       FontSize="Medium"
                       Margin="10, 20"/>
            </Grid>

            <!--Content-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                
                <maps:Map WidthRequest="320" 
                          HeightRequest="500"
                          x:Name="eventsMap"
                          IsShowingUser="True"
                          MapType="Hybrid"
                          HorizontalOptions="CenterAndExpand"/>

                <Grid Margin="10"
                      HorizontalOptions="CenterAndExpand"
                      Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackLayout Orientation="Vertical">
                        <Label Text="Distance"
                               TextColor="White"/>
                        <Picker SelectedItem="{Binding Distance, Mode=TwoWay}"
                            ItemsSource="{Binding DistanceOptions}"/>
                    </StackLayout>

                    <!--<StackLayout Orientation="Vertical"
                                 Margin="20, 0"
                                 Grid.Column="1">
                        <Label Text="Amount" 
                               TextColor="White"
                               Grid.Row="2"/>
                        <Picker SelectedItem="{Binding PageSize, Mode=TwoWay}"
                                ItemsSource="{Binding PageSizeOptions}"/>
                    </StackLayout>-->

                    <StackLayout Orientation="Vertical"
                                 Grid.Column="2">
                        <Label Text="Category" 
                               TextColor="White"
                               Grid.Row="4"/>
                        <Picker SelectedItem="{Binding Category, Mode=TwoWay}"
                                ItemsSource="{Binding CategoryOptions}"
                                
                                ItemDisplayBinding="{Binding shortname}"
                            />
                    </StackLayout>

                    <Button Text="Search"
                            Command="{Binding SearchCommand}"
                            HorizontalOptions="Center"
                            Grid.Row="1"
                            Grid.ColumnSpan="3"/>

                    <ActivityIndicator IsVisible="{Binding IsLoading}"
                                       IsEnabled="True"
                                       IsRunning="{Binding IsLoading}"
                                       Color="White"
                                       HorizontalOptions="CenterAndExpand"
                                       Grid.Row="2"
                                       Grid.ColumnSpan="3"/>
                </Grid>

                <Grid Grid.Column="1"
                      Grid.RowSpan="2"
                          BackgroundColor="White"
                          IsVisible="{Binding HasSearchResults}"
                      WidthRequest="200">

                    <Grid>
                        <ListView ItemsSource="{Binding SearchResults}"
                                      SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                                  RowHeight="200">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <ViewCell.View>
                                            <Grid Margin="10">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>

                                                <Image Source="{Binding group_photo.photo_link}" 
                                                       Aspect="AspectFill"
                                                        HeightRequest="200" 
                                                        WidthRequest="125"
                                                        Grid.RowSpan="2"/>

                                                <Grid Grid.Row="1"
                                                      VerticalOptions="End">
                                                    <BoxView BackgroundColor="Black"
                                                         Opacity=".4"
                                                         VerticalOptions="End"
                                                             BindingContext="{x:Reference Name=eventNameLabel}"
                                                             HeightRequest="{Binding Path=Height}"
                                                             Margin="10,0,0,10"/>
                                                    
                                                    <Label Text="{Binding name}"
                                                           TextColor="White"
                                                        FontAttributes="Bold"
                                                           x:Name="eventNameLabel"
                                                        Margin="10,0,0,10"/>
                                                    <!--<Label Margin="0,10,0,0"
                                                        Text="{Binding members, StringFormat='Number of Members: {0:N}'}"
                                                           TextColor="White">
                                                    </Label>
                                                    <Label Margin="0,10,0,0"
                                                        Text="{Binding rating, StringFormat='Rating: {0:N}'}"
                                                           TextColor="White">
                                                    </Label>-->
                                                </Grid>
                                            </Grid>
                                        </ViewCell.View>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>

                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>